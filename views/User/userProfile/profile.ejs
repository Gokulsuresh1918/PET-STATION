<script>
  function addImage() {
    // Display SweetAlert input dialog for image selection
    Swal.fire({
      title: 'Select Image',
      input: 'file',
      inputAttributes: {
        accept: 'image/*',
      },
      showCancelButton: true,
      confirmButtonText: 'Submit',
      showLoaderOnConfirm: true,
      preConfirm: (file) => {
        return new Promise((resolve) => {
          // Read the selected file as data URL
          const reader = new FileReader();
          reader.onload = function (event) {
            const imageData = event.target.result;
            resolve(imageData);
          };
          reader.readAsDataURL(file);
        });
      },
      allowOutsideClick: () => !Swal.isLoading(),
    }).then((result) => {
      if (result.isConfirmed) {
        const imageData = result.value;

        document.getElementById('profileImage').src = imageData;

        // Make a POST request to the server to handle the image
        fetch('/addimage', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify({ image: imageData }),
        })
          .then(response => response.json())
          .then(data => {
            // Handle the response from the server (if needed)
            console.log('Image added successfully on the server:', data);
          })
          .catch(error => {
            console.error('Error adding image profile on the server:', error);
          });
      }
    });

  }
       
</script>



<body class="g-sidenav-show  bg-gray-200">
  <!--header-->
  <%- include('../partials/adminpartials/aside') %>
    <main class="main-content position-relative max-height-vh-100 h-100 border-radius-lg ">
      <!-- Navbar -->
      <%- include('../partials/adminpartials/navbar') %>
        <!-- End Navbar -->

        <div class="row mb-4">
          <div class="col-12 grid-margin">
            <div class="card">
              <div class="card-body">
                <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                  <div class="bg-gradient-primary shadow-primary border-radius-lg pt-4 pb-3">
                    <h6 class="text-white text-capitalize ps-3">Edit Category</h6>
                    
                  </div>
                  
                </div>
                <div class="table-responsive">
                    <div class="main">
                        <div class="card editPage p-4 bg-light">
                          <a href="/admin/Categorydetails">
                            <h1>&times;</h1>
                          </a>
                          <% if (locals.message) { %>
                            <div class="alert alert-danger text-center">
                              <strong style="color: red;"><%= message %> </strong>
                            </div>
                          <% } %> 
                          <form action="/admin/Categorydetails" method="post" onsubmit="return validateForm()">
                            <div class="mb-3">
                                <label for="categoryName" class="form-label">Category Name:</label>
                                <input type="text" class="form-control" id="categoryname" name="categoryname" required>
                                <div id="categoryNameError" class="error-message"></div>
                            </div>
                            <div class="mb-3">
                                <label for="description" class="form-label">Description:</label>
                                <input class="form-control" id="description" name="description" required type="text">
                                <div id="descriptionError" class="error-message"></div>
                            </div>
                            <p></p>
                            <button type="submit" class="btn btn-primary">Save Changes</button>
                        </form>
                        </div>
                      </div>
                  
                   
                </div>
              </div>
            </div>
          </div>
         
        </div>

        <%- include('../partials/adminpartials/footer') %>
          </div>
    </main>
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  </body>


  <script>
    function validateForm() {
        var categoryName = document.getElementById("categoryname").value;
        var description = document.getElementById("description").value;

        // Reset previous error messages
        document.getElementById("categoryNameError").innerHTML = "";
        document.getElementById("descriptionError").innerHTML = "";

        // Validate category name (only letters and spaces)
        var nameRegex = /^[a-zA-Z ]+$/;
        if (!nameRegex.test(categoryName)) {
            document.getElementById("categoryNameError").innerHTML = "Category name should only contain letters and spaces.";
            return false;
        }

        // Validate description (only letters and basic punctuation)
        var descriptionRegex = /^[a-zA-Z0-9!@#$%^&*()_+{}\[\]:;<>,.?~\\/-]+$/;
        if (!descriptionRegex.test(description)) {
            document.getElementById("descriptionError").innerHTML = "Description should only contain letters and basic punctuation.";
            return false;
        }

        // Additional validation logic can be added here

        return true;
    }

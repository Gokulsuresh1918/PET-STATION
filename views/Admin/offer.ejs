        border: none;
        border-radius: 5px;
        cursor: pointer;
    }

    body {
        font-family: Arial, sans-serif;
        margin: 0;
        /* Reset default body margin */
    }

    .btn_3 {
        padding: 10px;
        background-color: #4caf50;
        color: white;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        margin: 20px 0;
        /* Add margin top and bottom */
    }

    /* Responsive margin adjustments */
    @media screen and (max-width: 600px) {
        .btn_1 {
